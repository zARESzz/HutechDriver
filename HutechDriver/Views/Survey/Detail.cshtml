
@model HutechDriver.Models.EF.Survey
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework;
@using HutechDriver.Models
@{
    ViewBag.Title = "DetailsTrip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/Style2.css" rel="stylesheet" />
<style>
    .card {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 20px;
        background-color: #f8f8f8;
    }

    .card-header {
        background-color: #007bff;
        padding: 10px;
        border-bottom: 1px solid #ccc;
        margin-bottom: 20px;
    }

    .card-title {
        margin: 0;
        font-size: 30px;
        color: white;
    }

    .card-body {
        padding: 10px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
    }

    .data-display {
        padding: 5px;
        border: 1px solid #ccc;
        background-color: #fff;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        display: inline-block;
        margin-top: 10px;
    }
    /* Thêm các quy tắc CSS tùy chỉnh khác tại đây */
</style>
<section class="content">

    <!-- Default box -->
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Survey Form</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" style="text-align: left" id="activity">
                                @{
                                    if (Model != null)
                                    {


                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Người đăng:</label>

                                            @Html.DisplayFor(model => model.FullName)

                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Thời gian:</label>

                                            @Html.DisplayFor(model => model.CreateDate)

                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tiêu đề:</label>

                                            @Html.DisplayFor(model => model.Title)

                                        </div>


                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mô tả:</label>
                                            @Html.DisplayFor(model => model.Description)

                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mô tả chi tiết:</label>
                                            @Html.DisplayFor(model => model.DescriptionFull)

                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Link :</label>

                                            <a href="@Model.Link" target="_blank">@Html.DisplayFor(model => model.Link)</a>
                                        </div>
                                    }

                                    <div class="form-group">
                                        <a href="@Url.Action("Complete", "Survey", new { id = Model.Id })" class="btn btn-sm btn-primary">Đã hoàn thành</a>
                                        <a href="/Survey/Index" class="btn btn-sm btn-primary" style="background-color:red">Hủy</a>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
            <!-- /.card-footer-->
        </div>
    </div>
    <!-- /.card -->
    <!-- /.card -->
</section>

