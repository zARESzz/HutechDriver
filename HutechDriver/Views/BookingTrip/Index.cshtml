@model PagedList.IPagedList<HutechDriver.Models.EF.Trip>
@using PagedList.Mvc;
@using HutechDriver.Models
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework;
@{
    ViewBag.Title = "BookingTrip";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách đơn đặt xe</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nơi đi</th>
                        <th>Nơi đến</th>
                        <th>Khoảng cách</th>
                        <th>Thời gian</th>
                        <th>Giá</th>
                        @*<th>Ngày đặt</th>*@
                        <th>Thời gian đặt xe</th>
                    </tr>
                </thead>
                <tbody>
                    @{


                        var ID = User.Identity.GetUserId();


                        if (Model != null && Model.Any())
                        {
                            var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                            foreach (var item in Model)
                            {
                                if (item.Status == "Chưa nhận" && item.UserId == ID || item.Status == "Đang chạy")
                                {
                                    <tr id=" trow_@item.Id">
                                        <td>@item.Id</td>
                                        <td>@item.StartLocation</td>
                                        <td>@item.EndLocation</td>
                                        <td>@item.Distance</td>
                                        <td>@item.Time</td>
                                        <td>@HutechDriver.Common.Common.FormatNumber(item.Price)</td>
                                        @*<td>@item.OrderDate</td>*@
                                        <td>@item.TimeBook</td>

                                        <td>
                                            <a href="/BookingTrip/DetailsTrip/@item.Id" class="btn btn-sm btn-primary">Xem đơn</a>
                                            <button id="deny-trip" type="button" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Hủy đơn</button>
                                        </td>

                                    </tr>
                                    i++;
                                }
                            }
                        }
                    }

                </tbody>
            </table>

            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>


@section scripts{
    <script>
       const denyBtns = document.querySelectorAll('#deny-trip');

    denyBtns.forEach(denyBtn => {
        denyBtn.addEventListener('click', function(event) {
            const tripId = $(this).data('id');
            const url = '@Url.Action("DeleteTrip", "BookingTrip")';

            $.ajax({
                type: "POST",
                url: url,
                data: { id: tripId } ,
                success: function (rs) {
                    if (rs.success) {
                        window.location.href = "/home/index";
                        alert('Hủy đơn thành công!.');
                    }
                },
                error: function (rs) {
                    alert('Hủy đơn không thành công!.');
                    location.reload(true);
                }
            });
        });
    });
    </script>
}



